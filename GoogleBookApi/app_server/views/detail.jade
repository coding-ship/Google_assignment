link(rel='stylesheet', href='/stylesheets/style.css')
h1 Book Detail 
br
if(bookDetail)
    div(class='grid')
        div(class = 'leftGrid')
            h2 #{bookDetail.volumeInfo.title}
            img(src = "#{bookDetail.volumeInfo.imageLinks.thumbnail}" id="displayImage")
        div(class = "rightGrid")
            div(class = "section")
                h2 Author: 
                h3(class = "info") #{bookDetail.volumeInfo.authors[0]}
            div(class = "section")
                h2 Publisher: 
                h3(class = "info") #{bookDetail.volumeInfo.publisher}
            div(class = "section")
                h2 Published Data: 
                h3(class = "info") #{bookDetail.volumeInfo.publishedDate}
            div(class = "section")
                h2 Page Count: 
                h3(class = "info") #{bookDetail.volumeInfo.pageCount}
            div(class = "section")
                h2 Description: 
                p(class = "description") #{bookDetail.volumeInfo.description}